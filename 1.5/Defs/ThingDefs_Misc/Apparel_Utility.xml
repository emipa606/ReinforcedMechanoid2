<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--======== Prophet Aura	========-->
  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>RM_Apparel_ProphetAura</defName>
    <label>prophet's aura</label>
    <description>A gorgeous pair of arches that resemble fixed wings, attaching to the wearerâ€™s back, bearing great religious significance and to only be worn by prophets of Tyrikan. Quite heavy due to their material, but those that wear them were not intended to act without external aid, rather operate in positions of authority. Their design doubles as oversized neural heat sinks, massively improving the overwhelming outputs of psycasting that prophets are capable of displaying.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/ProphetAura/ProphetAura</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <techLevel>Ultra</techLevel>
    <relicChance>0</relicChance>
    <allowedArchonexusCount>3</allowedArchonexusCount>
    <statBases>
      <MaxHitPoints>185</MaxHitPoints>
      <WorkToMake>18000</WorkToMake>
      <Mass>12</Mass>
      <EquipDelay>3</EquipDelay>
      <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Heat>0.10</ArmorRating_Heat>
      <Insulation_Cold>0</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
    </statBases>
    <costStuffCount>250</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <equippedStatOffsets>
      <NegotiationAbility>0.1</NegotiationAbility>
      <SocialImpact>0.1</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.35</SlaveSuppressionOffset>
      <PsychicEntropyRecoveryRate MayRequire="Ludeon.RimWorld.Royalty">0.025</PsychicEntropyRecoveryRate>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <smeltable>true</smeltable>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <ignoredByNonViolent>true</ignoredByNonViolent>
      <wearPerDay>0.01</wearPerDay>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ProphetAura/ProphetAura</wornGraphicPath>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>ProphetAura</li>
      </tags>
      <wornGraphicData>
        <renderUtilityAsPack>true</renderUtilityAsPack>
        <north>
          <offset>(0,0.6)</offset>
          <fat>
            <offset>(0,-0.05)</offset>
          </fat>
        </north>
        <south>
          <offset>(0,0.65)</offset>
