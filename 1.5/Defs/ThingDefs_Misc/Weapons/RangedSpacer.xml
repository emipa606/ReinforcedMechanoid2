      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.35</MoveSpeed>
    </equippedStatOffsets>
    <statBases>
      <WorkToMake>85000</WorkToMake>
      <Mass>28</Mass>
      <AccuracyTouch>0.18</AccuracyTouch>
      <AccuracyShort>0.26</AccuracyShort>
      <AccuracyMedium>0.26</AccuracyMedium>
      <AccuracyLong>0.18</AccuracyLong>
      <RangedWeapon_Cooldown>10.00</RangedWeapon_Cooldown>
    </statBases>
    <weaponClasses>
