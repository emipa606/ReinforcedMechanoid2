      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidInfernoRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeLance</soundInteract>
    <techLevel>Spacer</techLevel>
    <equippedAngleOffset>45</equippedAngleOffset>
    <generateCommonality>0.2</generateCommonality>
    <recipeMaker>
      <researchPrerequisite>RM_InfernoShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>76</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
    <statBases>
      <WorkToMake>70000</WorkToMake>
      <Mass>12</Mass>
      <AccuracyTouch>0.15</AccuracyTouch>
      <AccuracyShort>0.22</AccuracyShort>
      <AccuracyMedium>0.38</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>5.00</RangedWeapon_Cooldown>
    </statBases>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <weaponTags>
      <li>MechanoidGunMedium</li>
      <li>SpacerGun</li>
