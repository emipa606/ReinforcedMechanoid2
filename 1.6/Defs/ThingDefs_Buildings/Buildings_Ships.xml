<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ================================ Ancient Ship Base ====================== -->
  <ThingDef ParentName="BuildingBase" Name="RM_AncientShipPart" Abstract="True">
    <tickerType>Normal</tickerType>
    <drawerType>MapMeshOnly</drawerType>
    <altitudeLayer>Building</altitudeLayer>
    <thingClass>ReinforcedMechanoids.MechShipPart</thingClass>
    <selectable>true</selectable>
    <pathCost>50</pathCost>
    <startingHpRange>0.4~0.95</startingHpRange>
    <blockWind>true</blockWind>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>
    <rotatable>true</rotatable>
    <stealable>false</stealable>
    <techLevel>Ultra</techLevel>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>
    <uiIconScale>0.8</uiIconScale>
    <building>
      <buildingTags>
        <li>RM_AncientShip</li>
      </buildingTags>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
      <deconstructible>false</deconstructible>
      <claimable>false</claimable>
    </building>
    <statBases>
      <Flammability>0</Flammability>
      <Beauty>-20</Beauty>
    </statBases>
    <damageMultipliers>
      <li>
        <damageDef>Flame</damageDef>
        <multiplier>0</multiplier>
      </li>
    </damageMultipliers>
    <killedLeavings>
      <ChunkSlagSteel>6</ChunkSlagSteel>
    </killedLeavings>
  </ThingDef>
