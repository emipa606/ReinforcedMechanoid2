<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ================================ Immolator ====================== -->
  <ThingDef ParentName="BaseGun">
    <defName>RM_Gun_PlasmaImmolator</defName>
    <label>immolator</label>
    <description>A powerful energy pulse assault cannon. Fires a small burst of ultra-high-energy projectiles that explode on impact. Quite large and unstable, damaging and igniting anything at point of impact. However, they are innately inaccurate and intended for suppression rather than direct fire.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidImmolator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeLance</soundInteract>
    <techLevel>Ultra</techLevel>
    <relicChance>0</relicChance>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <statBases>
      <MarketValue>1400</MarketValue>
      <Mass>15</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>3.8</RangedWeapon_Cooldown>
    </statBases>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <weaponTags>
      <li>MechanoidGunBehemoth</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RM_Bullet_PlasmaImmolator</defaultProjectile>
        <forcedMissRadius>2.5</forcedMissRadius>
        <ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
        <warmupTime>3.2</warmupTime>
        <ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <range>22.9</range>
        <soundCast>RM_Shot_PlasmaImmolator</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>shielding</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>RM_Bullet_PlasmaImmolator</defName>
    <label>immolator shot</label>
    <graphicData>
      <texPath>Things/Projectile/Plasmashot_Large</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Flame</damageDef>
      <speed>50</speed>
      <explosionRadius>1.1</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.27</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>
  <!-- ================================ Plasma Immolation Artillery ====================== -->
  <ThingDef ParentName="BaseGun">
    <defName>RM_Gun_PlasmaHellgator</defName>
    <label>hellgator</label>
    <description>An incredibly powerful energy pulse artillery cannon. Fires a single, unstable projectile of pure energy at long range that explodes violently on impact. Very inaccurate as it is meant to hit large targets, while the explosion will ignite anything nearby and melt through starship-grade armour plating.\n\nAs the intended use is for sieges and planetary defences, the weapon cannot be aimed below a certain angle.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidHellgator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2</drawSize>
    </graphicData>
    <uiIconPath>Things/Item/Equipment/WeaponRanged/MechanoidHellgator</uiIconPath>
    <techLevel>Ultra</techLevel>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <relicChance>0</relicChance>
    <recoilPower>2</recoilPower>
    <statBases>
      <MarketValue>9999</MarketValue>
      <Mass>55</Mass>
      <RangedWeapon_Cooldown>5.2</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <isMortar>true</isMortar>
        <verbClass>Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RM_Bullet_PlasmaHellgator</defaultProjectile>
        <forcedMissRadius>15</forcedMissRadius>
        <forcedMissRadiusClassicMortars>18</forcedMissRadiusClassicMortars>
        <ai_AvoidFriendlyFireRadius>6</ai_AvoidFriendlyFireRadius>
        <requireLineOfSight>false</requireLineOfSight>
        <warmupTime>10.5</warmupTime>
        <minRange>26.9</minRange>
        <range>200</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>RM_Shot_PlasmaHellgator</soundCast>
        <muzzleFlashScale>16</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <weaponTags Inherit="False">
      <li>MechanoidGunWraithArtillery</li>
    </weaponTags>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>RM_Bullet_PlasmaHellgator</defName>
    <label>encapsulated plasma</label>
    <graphicData>
      <texPath>Things/Projectile/ImmolationArtillery</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>1.5</drawSize>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Flame</damageDef>
      <speed>25</speed>
      <explosionRadius>3.9</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.50</preExplosionSpawnChance>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>Explosion_GiantBomb</soundExplode>
      <soundImpactAnticipate>RM_Hit_PlasmaHellgator</soundImpactAnticipate>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
    <comps>
      <li Class="CompProperties_AmbientSound">
        <sound>MortarRound_Ambient</sound>
      </li>
    </comps>
  </ThingDef>
  <!-- ================================ Plasma Grenade ====================== -->
  <ThingDef ParentName="BaseMakeableGrenade">
    <defName>RM_Weapon_GrenadePlasmaImmolator</defName>
    <label>immolator grenade</label>
    <description>A stack of antipersonnel plasma pulse grenades. The resulting explosion will ignite anything nearby.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidImmolatorGrenades</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <soundInteract>Interact_Grenade</soundInteract>
    <uiIconScale>1.3</uiIconScale>
    <techLevel>Ultra</techLevel>
    <statBases>
      <Mass>4</Mass>
      <RangedWeapon_Cooldown>2.66</RangedWeapon_Cooldown>
      <WorkToMake>22000</WorkToMake>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>AdvancedFabrication</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>20</Steel>
      <Chemfuel>80</Chemfuel>
    </costList>
    <weaponTags>
      <li>MechanoidGrenadeDestructive</li>
      <li>EmpireGrenadeDestructive</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li>
        <label>throw immolator grenade</label>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>12.9</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <warmupTime>1.5</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <soundCast>ThrowGrenade</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>RM_Proj_GrenadeImmolator</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>4.66</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>RM_Proj_GrenadeImmolator</defName>
    <label>immolator grenade</label>
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/MechanoidImmolatorGrenade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <explosionRadius>2.9</explosionRadius>
      <damageDef>Flame</damageDef>
      <explosionDelay>180</explosionDelay>
    </projectile>
  </ThingDef>
</Defs>
