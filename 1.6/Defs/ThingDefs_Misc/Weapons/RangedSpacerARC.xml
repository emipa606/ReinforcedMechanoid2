<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ================================ ARC Weapons ====================== -->
  <ThingDef ParentName="BaseBullet">
    <defName>RM_Gun_ARCSmall</defName>
    <label>lightning bolt</label>
    <thingClass>VEF.Weapons.TeslaProjectile</thingClass>
    <graphicData>
      <texPath>Projectile/Lightning</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Stun</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <speed>100</speed>
    </projectile>
    <modExtensions>
      <li Class="VEF.Weapons.TeslaChainingProps">
        <maxBounceCount>1</maxBounceCount>
        <damageDef>Flame</damageDef>
        <explosionDamageDef>Stun</explosionDamageDef>
        <impactRadius>0.5</impactRadius>
        <targetFriendly>false</targetFriendly>
        <addFire>false</addFire>
        <bounceRange>2</bounceRange>
        <maxLifetime>15</maxLifetime>
      </li>
    </modExtensions>
  </ThingDef>
  <!-- ================================ ARC Pistol ====================== -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>RM_Gun_ARCPistol</defName>
    <label>ARC pistol</label>
    <description>A short-range tesla-coil pistol used by mechanoids. It shoots a burst of lighting projectiles, stunning and lightly burning their target before jumping to the next, capable of causing damage to multiple targets with each shot.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidARCPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>RM_Interact_ARC</soundInteract>
    <generateAllowChance>0.5</generateAllowChance>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <Mass>1.6</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.9</RangedWeapon_Cooldown>
      <WorkToMake>80000</WorkToMake>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>RM_ARCShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>35</Plasteel>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>MechanoidGunSmall</li>
      <li>MechanoidGunARCSmall</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RM_Gun_ARCSmall</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>15.9</range>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>RM_Shot_ARC</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>coil</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- ================================ ARC Rifle ====================== -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>RM_ARCRifle</defName>
    <label>ARC rifle</label>
    <description>A tesla-coil based rifle used by mechanoids. It shoots lighting projectiles, stunning and burning their target before jumping to the next, capable of causing damage to multiple targets with each shot.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidARCRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>RM_Interact_ARC</soundInteract>
    <generateCommonality>0.5</generateCommonality>
    <generateAllowChance>0.5</generateAllowChance>
    <equippedAngleOffset>45</equippedAngleOffset>
    <statBases>
      <Mass>5.5</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.70</AccuracyLong>
      <RangedWeapon_Cooldown>3.00</RangedWeapon_Cooldown>
      <WorkToMake>120000</WorkToMake>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>RM_ARCShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>75</Plasteel>
      <ComponentSpacer>6</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>MechanoidGunMedium</li>
      <li>MechanoidGunARCMedium</li>
    </weaponTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.15</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RM_Gun_ARCSmall</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>27.9</range>
        <soundCast>RM_Shot_ARC</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>coil</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- ================================ ARC Thrower ====================== -->
  <ThingDef ParentName="BaseGun">
    <defName>RM_Gun_ARCThrower</defName>
    <label>ARC thrower</label>
    <description>A medium-range reinforced tesla-coil weapon used by mechanoids. It fires lighting projectiles, stunning and burning their target before jumping to the next, able to damage multiple targets with each shot. Extremely dangerous and best avoided.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidARCThrower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>RM_Interact_ARC</soundInteract>
    <generateCommonality>0.3</generateCommonality>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <relicChance>0</relicChance>
    <equippedAngleOffset>45</equippedAngleOffset>
    <techLevel>Spacer</techLevel>
    <statBases>
      <MarketValue>2400</MarketValue>
      <Mass>20</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.72</AccuracyMedium>
      <AccuracyLong>0.62</AccuracyLong>
      <RangedWeapon_Cooldown>12.8</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>MechanoidGunHeavy</li>
      <li>MechanoidGunARC</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RM_Bullet_ARCThrower</defaultProjectile>
        <warmupTime>5</warmupTime>
        <range>19.9</range>
        <minRange>4.9</minRange>
        <soundCast>RM_Shot_ARC</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>coil</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>RM_Bullet_ARCThrower</defName>
    <label>lightning bolt</label>
    <thingClass>VEF.Weapons.TeslaProjectile</thingClass>
    <graphicData>
      <texPath>Projectile/Lightning</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Stun</damageDef>
      <damageAmountBase>2</damageAmountBase>
      <speed>140</speed>
    </projectile>
    <modExtensions>
      <li Class="VEF.Weapons.TeslaChainingProps">
        <maxBounceCount>1</maxBounceCount>
        <damageDef>Flame</damageDef>
        <explosionDamageDef>Smoke</explosionDamageDef>
        <impactRadius>2.9</impactRadius>
        <targetFriendly>false</targetFriendly>
        <addFire>false</addFire>
        <bounceRange>2</bounceRange>
        <maxLifetime>30</maxLifetime>
      </li>
    </modExtensions>
  </ThingDef>
</Defs>
