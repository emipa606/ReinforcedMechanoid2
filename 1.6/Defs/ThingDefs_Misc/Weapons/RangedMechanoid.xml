<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ================================ Heavy Charge Lance ====================== -->
  <ThingDef ParentName="BaseGun">
    <defName>RM_Gun_ChargeLanceHeavy</defName>
    <label>heavy charge lance</label>
    <description>A heavy, pulse-charged rail-assisted lance weapon used by mechanoids. It fires three high-velocity rounds in quick succession as a burst, charged with unstable energy as each shot leaves the acceleration rail.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MechanoidHeavyLance</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <equippedAngleOffset>45</equippedAngleOffset>
    <statBases>
      <MarketValue>2500</MarketValue>
      <Mass>25</Mass>
      <AccuracyTouch>0.58</AccuracyTouch>
      <AccuracyShort>0.76</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.68</AccuracyLong>
      <RangedWeapon_Cooldown>12.4</RangedWeapon_Cooldown>
    </statBases>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <weaponTags>
      <li>MechanoidGunHeavy</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ChargeLance</defaultProjectile>
        <warmupTime>3.25</warmupTime>
        <range>32.9</range>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>ChargeLance_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>rail</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>
