    <category>RM_GestaltEngine_Upgrades</category>
    <order>15</order>
    <xpath>Defs/ThingDef[defName="RM_GestaltEngine"]/comps/li[@Class="GestaltEngine.CompProperties_Upgradeable"]/upgrades/li[2]/totalControlGroups</xpath>
    <range>0~10</range>
    <defaultValue>1</defaultValue>
  </Operation>
  <!-- ================ Mechanoid Caravans - Level 1 ================ -->
  <Operation Class="ModSettingsFramework.PatchOperationModOption">
    <id>RM_GestaltLevel1Caravan</id>
    <label>Gestalt Level 1 Allow Caravans</label>
    <tooltip>If you want to allow connected mechs to join caravans when the Gestalt Engine is level 1 (Default: Off)</tooltip>
    <defaultValue>False</defaultValue>
    <category>RM_GestaltEngine_Upgrades</category>
    <order>16</order>
    <operations>
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="RM_GestaltEngine"]/comps/li[@Class="GestaltEngine.CompProperties_Upgradeable"]/upgrades/li[2]/allowCaravans</xpath>
